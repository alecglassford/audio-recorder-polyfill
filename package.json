{
  "name": "audio-recorder-polyfill",
  "version": "0.1.1",
  "description": "MediaRecorder polyfill to record audio in Edge and Safari",
  "main": "dist/audio-polyfill.js",
  "umd:main": "dist/audio-polyfill.umd.js",
  "module": "dist/audio-polyfill.mjs",
  "source": "src/index.js",
  "files": [
    "dist/"
  ],
  "keywords": [
    "mediarecorder",
    "polyfill",
    "edge",
    "safari",
    "wave",
    "wav",
    "webrtc",
    "audio",
    "web audio api",
    "recorder"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/audio-recorder-polyfill",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-jest": "^24.0.0",
    "http-server": "^0.11.1",
    "jest": "^24.0.0",
    "microbundle": "^0.9.0",
    "pre-commit": "^1.2.2"
  },
  "scripts": {
    "build": "microbundle --target browser --name MediaRecorderPolyfill --entry src/index.js",
    "build:watch": "microbundle --entry src/index.js --compress false --watch",
    "clean": "rimraf docs/ coverage/ test/demo/build/",
    "docs": "jsdoc --configure .jsdocrc *.js",
    "unit": "jest --coverage",
    "test": "jest",
    "start": "http-server demo"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/browser",
    "globals": {
      "onmessage": true
    }
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "1018 B"
    }
  ]
}
